<Window x:Class="SEM_1_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEM_1_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="870" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,0,5">
                    <Button Content="Populate" Click="PopulateBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="Import" Click="ImportBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="Export" Click="ExportBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 1 - Add PCR" Click="AddPCRBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 2 - Find PCR" Click="FindPCRBtn_Click"  Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 3 - Persons Tests" Click="FindPersonsTestsBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 4 - District Positives" Click="FindDistrictPositivesBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 5 - District All" Click="FindDistrictAllBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 6 - Region Positives" Click="FindRegionPositivesBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 7 - Region All" Click="FindRegionAllBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 8 - All Positive" Click="FindAllPositiveTestsBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 9 - All Tests" Click="FindAllTestsBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 10 - Sick District" Click="FindDistrictSickBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 11 - Sick District Sorted" Click="FindDistrictSickSortedBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 12 - Sick Region" Width="auto" Click="FindRegionSickBtn_Click" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 13 - All Sick" Width="auto" Click="FindAllSickBtn_Click" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 14 - District Sick Person" Click="FindSickEachDistrictBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 15 - Districts Sorted" Click="FindDistrictsBySickBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 16 - Regions Sorted" Click="FindRegionsBySickBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 17 - Site All" Click="FindSiteTestsBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 18 - Test By ID" Click="FindTestByIDBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 19 - Add Person" Click="AddPersonBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 20 - Delete PCR" Click="DeletePCRBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button Content="# 21 - Delete Person" Click="DeletePersonBtn_Click" Width="auto" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="4,0,0,5">
                    <TextBlock Text="PERSON" Margin="5" FontWeight="Bold"/>
                    <TextBlock Text="Name:" Margin="5"/>
                    <TextBlock Text="Surname:" Margin="5"/>
                    <TextBlock Text="DD:" Margin="5,10,5,5"/>
                    <TextBlock Text="MM:" Margin="5"/>
                    <TextBlock Text="YY:" Margin="5,12,5,5"/>
                    <TextBlock Text="Person ID:" Margin="5,7,5,5"/>
                    <TextBlock Text="PCR" Margin="5,10, 5, 5" FontWeight="Bold"/>
                    <TextBlock Text="MIN (U):" Margin="5"/>
                    <TextBlock Text="HOUR (U):" Margin="5"/>
                    <TextBlock Text="DD (U):" Margin="5"/>
                    <TextBlock Text="MM (U):" Margin="5"/>
                    <TextBlock Text="YY (U):" Margin="5"/>
                    <TextBlock Text="Person ID:" Margin="5"/>
                    <TextBlock Text="Test ID:" Margin="5"/>
                    <TextBlock Text="Test Site:" Margin="5"/>
                    <TextBlock Text="Region:" Margin="5"/>
                    <TextBlock Text="District:" Margin="5"/>
                    <TextBlock Text="PCR Value:" Margin="5"/>
                    <TextBlock Text="Note:" Margin="5"/>
                    <TextBlock Text="INTERVAL" Margin="5,10, 5, 5" FontWeight="Bold"/>
                    <TextBlock Text="MIN (L):" Margin="5"/>
                    <TextBlock Text="HOUR (L):" Margin="5"/>
                    <TextBlock Text="DD (L):" Margin="5"/>
                    <TextBlock Text="MM (L):" Margin="5"/>
                    <TextBlock Text="YY (L):" Margin="5"/>
                    <TextBlock Text="Days:" Margin="5"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,0,5">
                    <TextBox Height="23" Visibility="Hidden"/>
                    <TextBox Name="Name" Height="23" Width="200" Margin="3"/>
                    <TextBox Name="Surname" Height="23" Margin="3"/>
                    <TextBox Name="DayOfBirth" Height="23" Margin="3"/>
                    <TextBox Name="MonthOfBirth" Height="23" Margin="3"/>
                    <TextBox Name="YearOfBirth" Height="23" Margin="3"/>
                    <TextBox Name="PersonID" Height="23" Margin="3"/>
                    <TextBox Height="23" Visibility="Hidden"/>
                    <TextBox Name="MinuteUpper" Height="23" Margin="5,6,5,5"/>
                    <TextBox Name="HourUpper" Height="23" Margin="3"/>
                    <TextBox Name="DayUpper" Height="23" Margin="1"/>
                    <TextBox Name="MonthUpper" Height="23" Margin="1"/>
                    <TextBox Name="YearUpper" Height="23" Margin="1"/>
                    <TextBox Name="TestPersonID" Height="23" Margin="1"/>
                    <TextBox Name="TestID" Height="23" Margin="1"/>
                    <TextBox Name="TestSite" Height="23" Margin="1"/>
                    <TextBox Name="Region" Height="23" Margin="3"/>
                    <TextBox Name="District" Height="23" Margin="1"/>
                    <TextBox Name="TestValue" Height="23" Margin="1"/>
                    <TextBox Name="Note" Height="23" Margin="1"/>
                    <TextBox Height="23" Visibility="Hidden"/>
                    <TextBox Name="MinuteLower" Height="23" Margin="5,10,5,5"/>
                    <TextBox Name="HourLower" Height="23" Margin="2"/>
                    <TextBox Name="DayLower" Height="23" Margin="2"/>
                    <TextBox Name="MonthLower" Height="23" Margin="1"/>
                    <TextBox Name="YearLower" Height="23" Margin="1"/>
                    <TextBox Name="Days" Height="23" Margin="1"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
