<Window x:Class="SEM_1_GUI.PersonAndTestsByID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEM_1_GUI"
        xmlns:models="clr-namespace:SEM_1.Core;assembly=SEM_1.Core" 
        mc:Ignorable="d"
        Title="PersonAndTestsByID" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="34"/>
                <RowDefinition Height="Auto" MinHeight="34"/>
                <RowDefinition Height="Auto" MinHeight="34"/>
                <RowDefinition Height="Auto" MinHeight="34"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0">
        <Run Text="People count: " FontWeight="Bold"/><Run Text="{Binding PeopleCount}"/>
            </TextBlock>
            <ListBox x:Name="Person" Grid.Row="1" ItemsSource="{Binding People}" Grid.ColumnSpan="1" Margin="5,3" VerticalAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Person}">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0">
                    <Run Text="Name: " FontWeight="Bold"/><Run Text="{Binding Name}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1">
                    <Run Text="Surname: " FontWeight="Bold"/><Run Text="{Binding Surname}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="2">
                    <Run Text="Day of birth: " FontWeight="Bold"/><Run Text="{Binding DayOfBirth}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="3">
                    <Run Text="Month of birth: " FontWeight="Bold"/><Run Text="{Binding MonthOfBirth}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="4">
                    <Run Text="Year of birth: " FontWeight="Bold"/><Run Text="{Binding YearOfBirth}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="5">
                    <Run Text="Person ID: " FontWeight="Bold"/><Run Text="{Binding PersonID}"/>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Grid.Row="2">
        <Run Text="Tests count: " FontWeight="Bold"/><Run Text="{Binding TestsCount}"/>
            </TextBlock>
            <ListBox x:Name="Tests" Grid.Row="3" ItemsSource="{Binding PCRTests}" Grid.ColumnSpan="1" Margin="5,3" VerticalAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:PCRTestByID}">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0">
                    <Run Text="Minute: " FontWeight="Bold"/><Run Text="{Binding TestData.MinuteOfTest}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1">
                    <Run Text="Hour: " FontWeight="Bold"/><Run Text="{Binding TestData.HourOfTest}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="2">
                    <Run Text="Day: " FontWeight="Bold"/><Run Text="{Binding TestData.DayOfTest}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="3">
                    <Run Text="Month: " FontWeight="Bold"/><Run Text="{Binding TestData.MonthOfTest}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="4">
                    <Run Text="Year: " FontWeight="Bold"/><Run Text="{Binding TestData.YearOfTest}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="5">
                    <Run Text="Person ID: " FontWeight="Bold"/><Run Text="{Binding TestData.PersonID}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="6">
                    <Run Text="Test ID: " FontWeight="Bold"/><Run Text="{Binding TestData.TestID}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="7">
                    <Run Text="Test site ID: " FontWeight="Bold"/><Run Text="{Binding TestData.TestSiteID}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="8">
                    <Run Text="Region ID: " FontWeight="Bold"/><Run Text="{Binding TestData.RegionID}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="9">
                    <Run Text="District ID: " FontWeight="Bold"/><Run Text="{Binding TestData.DistrictID}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="10">
                    <Run Text="Positive: " FontWeight="Bold"/><Run Text="{Binding TestData.IsPositive}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="11">
                    <Run Text="Test value: " FontWeight="Bold"/><Run Text="{Binding TestData.TestValue}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="12">
                    <Run Text="Note: " FontWeight="Bold"/><Run Text="{Binding TestData.Note}"/>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </ScrollViewer>
</Window>
